layout :default, :title => @trick.name do
  h2 @trick.name
  div {
    span @trick.description
    a "(編集)", :href => "/trick/#{@trick.id}?mode=edit"
  }

  table do
    tr {
      th "日付"
      th "キャッチ"
      th "コメント"
    }
    @records.each do |record|
      tr {
        td record.date_str
        td record.catches 
        td record.comment 
      }
    end
  end

end
