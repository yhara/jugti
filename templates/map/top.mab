layout :default, :title => 'トップ' do
  h2 { a "トリック一覧", :href => "/tricks" }

  ul do
    @tricks.each do |trick|
      if trick
        li { a trick.name, :href => "/trick/#{trick.id}" }
      else
        li { a "...", :href => "/tricks" }
      end
    end
  end

  h2 "最近の更新"

  ul do
    @records.each do |record|
      li do 
        span record.date_str
        a record.trick.name, :href => "/trick/#{record.trick_id}"
        span "#{record.catches}キャッチ"
      end
    end
  end
end
